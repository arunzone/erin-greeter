{
  "name": "infrastructure",
  "version": "0.1.0",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "nodemon --watch lib --watch bin --watch lambda --watch test --ext ts,js,json,yml --exec \"npm-run-all localstack:restart test:once\"",
    "test:once": "LOCALSTACK_URL=http://localhost:4566 jest --runInBand --detectOpenHandles --forceExit",
    "localstack:up": "docker-compose -f docker-compose.yml up -d",
    "localstack:down": "docker-compose -f docker-compose.yml down",
    "localstack:restart": "npm run localstack:down || true && npm run localstack:up",
    "cdk:watch": "cdk watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix && prettier --write .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.917.0",
    "@aws-sdk/client-lambda": "^3.917.0",
    "@jest/globals": "^30.2.0",
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.7.9",
    "@types/pg": "^8.15.5",
    "@types/sequelize": "^4.28.20",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "aws-cdk": "^2.1031.0",
    "aws-cdk-lib": "^2.220.0",
    "aws-cdk-local": "^3.0.1",
    "aws-sdk": "^2.1536.0",
    "aws-sdk-client-mock": "^4.1.0",
    "constructs": "^10.0.0",
    "esbuild": "^0.25.11",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "uuid": "^13.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.914.0",
    "@aws-sdk/client-sqs": "^3.540.0",
    "axios": "^1.7.7",
    "kysely": "^0.27.6",
    "luxon": "^3.5.0",
    "moment": "^2.30.1",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  }
}
